{
  "Article": 19,
  "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "Content": {
    "Responsibilities": {
      "Controller": {
        "Obligations": [
          {
            "Action": "Communicate any rectification of personal data",
            "Conditions": {
              "References": [
                "Article 16",
                "Article 17(1)",
                "Article 18"
              ],
              "Exceptions": {
                "Impossible": true,
                "DisproportionateEffort": true
              }
            }
          },
          {
            "Action": "Inform data subject about recipients",
            "Condition": "if requested by the data subject"
          }
        ]
      }
    }
  }
}