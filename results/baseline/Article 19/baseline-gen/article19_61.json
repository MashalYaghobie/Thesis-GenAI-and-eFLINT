{
  "Article": 19,
  "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "Content": {
    "Obligation": {
      "Type": "Notification",
      "ResponsibleParty": "Controller",
      "Actions": [
        {
          "Type": "Communicate",
          "Details": "Rectification or erasure of personal data or restriction of processing",
          "References": [
            "Article 16",
            "Article 17(1)",
            "Article 18"
          ],
          "Recipients": "Each recipient to whom the personal data have been disclosed",
          "Exceptions": [
            {
              "Condition": "Proves impossible",
              "Outcome": "No notification required"
            },
            {
              "Condition": "Involves disproportionate effort",
              "Outcome": "No notification required"
            }
          ]
        }
      ],
      "InformedParty": {
        "Type": "Data subject",
        "Rights": {
          "Request": "Information about recipients",
          "Outcome": "Controller shall inform"
        }
      }
    }
  }
}