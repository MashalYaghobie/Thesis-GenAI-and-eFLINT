{
  "type": "Article",
  "number": 19,
  "title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "content": {
    "obligation": {
      "controller": {
        "action": [
          {
            "type": "communication",
            "description": "any rectification or erasure of personal data or restriction of processing",
            "compliance_articles": [
              "Article 16",
              "Article 17(1)",
              "Article 18"
            ],
            "recipients": {
              "action": "inform",
              "condition": {
                "if": {
                  "not": {
                    "impossible": true,
                    "disproportionate_effort": true
                  }
                }
              }
            }
          }
        ],
        "subsequent_action": {
          "data_subject": {
            "action": "inform",
            "condition": {
              "if": "requested"
            },
            "information": "recipients"
          }
        }
      }
    }
  }
}