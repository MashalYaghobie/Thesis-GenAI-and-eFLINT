{
  "Article": 19,
  "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "Content": {
    "Obligation": {
      "Controller": {
        "Actions": [
          {
            "Action": "Communicate",
            "Conditions": [
              "Rectification of personal data",
              "Erasure of personal data",
              "Restriction of processing"
            ],
            "ReferenceArticles": [
              "Article 16",
              "Article 17(1)",
              "Article 18"
            ],
            "Recipients": {
              "Definition": "Each recipient to whom the personal data have been disclosed",
              "Exceptions": [
                "Impossible communication",
                "Disproportionate effort"
              ]
            }
          }
        ]
      },
      "InformingDataSubject": {
        "Action": "Inform",
        "Conditions": {
          "Request": "Data subject requests information",
          "Content": "About recipients of the personal data"
        }
      }
    }
  }
}