{
  "Article": 19,
  "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "Contents": {
    "Obligation": {
      "Controller": {
        "Action": "Communicate",
        "Conditions": [
          "Any rectification of personal data",
          "Erasure of personal data",
          "Restriction of processing"
        ],
        "References": [
          "Article 16",
          "Article 17(1)",
          "Article 18"
        ],
        "Recipients": {
          "Definition": "Each recipient to whom the personal data have been disclosed",
          "Exceptions": [
            "If this proves impossible",
            "Involves disproportionate effort"
          ]
        }
      }
    },
    "Information to Data Subject": {
      "Condition": "If the data subject requests it",
      "Action": "Inform about those recipients"
    }
  }
}