{
  "Article": 19,
  "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "Content": {
    "Obligation": {
      "Type": "Notification",
      "Responsibilities": {
        "Controller": {
          "Actions": [
            "Communicate rectification of personal data",
            "Communicate erasure of personal data",
            "Communicate restriction of processing"
          ],
          "References": [
            "Article 16",
            "Article 17(1)",
            "Article 18"
          ],
          "Conditions": [
            "Unless impossible",
            "Unless involves disproportionate effort"
          ],
          "InformDataSubject": {
            "Action": "Inform data subject about recipients",
            "Condition": "If data subject requests it"
          }
        }
      }
    }
  }
}