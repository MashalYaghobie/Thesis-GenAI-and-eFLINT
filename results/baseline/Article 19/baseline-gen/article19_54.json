{
  "Article": {
    "Number": 19,
    "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
    "Content": {
      "Responsibilities": {
        "Controller": {
          "Actions": [
            {
              "Action": "Communicate rectification or erasure of personal data",
              "Conditions": [
                "In accordance with Article 16",
                "In accordance with Article 17(1)",
                "In accordance with Article 18"
              ],
              "Recipients": "Each recipient to whom the personal data have been disclosed",
              "Exceptions": [
                "Proves impossible",
                "Involves disproportionate effort"
              ]
            }
          ]
        },
        "Data Subject": {
          "Right": "Inform about recipients if requested"
        }
      }
    }
  }
}