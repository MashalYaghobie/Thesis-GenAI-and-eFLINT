{
  "Article": 19,
  "Title": "Notification obligation regarding rectification or erasure of personal data or restriction of processing",
  "Content": {
    "Requirements": {
      "Controller": {
        "Responsibilities": [
          {
            "Action": "Communicate rectification or erasure of personal data",
            "Conditions": [
              {
                "Reference": "Article 16",
                "Applicable": true
              }, 
              {
                "Reference": "Article 17(1)",
                "Applicable": true
              }, 
              {
                "Reference": "Article 18",
                "Applicable": true
              }
            ],
            "Recipients": {
              "Description": "Each recipient to whom the personal data have been disclosed",
              "Exceptions": [
                "Impossibility",
                "Disproportionate effort"
              ]
            }
          },
          {
            "Action": "Inform data subject about recipients",
            "Condition": "If requested by the data subject"
          }
        ]
      }
    }
  }
}