      "name": "inform-data-subject",
      "actor": "controller",
      "related-to": [
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "data-subject-request",
              "operands": []
            },
            {
              "identifier": "recipient-information",
              "operands": []
            }
          ]
        }
      ]
    }
  ],
  "updates": true
}