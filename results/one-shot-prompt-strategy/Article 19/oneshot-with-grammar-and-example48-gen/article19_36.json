            {
              "identifier": "impossible-or-disproportionate-effort",
              "operands": []
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "notify-erasure",
      "actor": "controller",
      "related-to": [
        "erasure",
        "recipient",
        "personal-data"
      ],
      "holds-when": [
        {
          "operator": "OR",
          "operands": [
            {
              "identifier": "erasure-notification",
              "operands": []
            },
            {
              "identifier": "impossible-or-disproportionate-effort",
              "operands": []
            }
          ]
        }
      ]
