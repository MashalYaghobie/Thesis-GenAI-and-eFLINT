{
  "version": "0.1.0",
  "kind": "phrases",
  "phrases": [
    {
      "kind": "afact",
      "name": "controller",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "data-subject",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "recipient",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "personal-data",
      "type": "String"
    },
    {
      "kind": "cfact",
      "name": "rectification-request",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "cfact",
      "name": "erasure-request",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "cfact",
      "name": "restriction-request",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients-about-rectification",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "rectification-request",
              "operands": []
            },
            {
              "identifier": "disclosure",
              "operands": []
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients-about-erasure",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "erasure-request",
              "operands": []
            },
            {
              "identifier": "disclosure",
              "operands": []
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients-about-restriction",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "restriction-request",
              "operands": []
            },
            {
              "identifier": "disclosure",
              "operands": []
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "inform-data-subject-about-recipients",
      "actor": "controller",
      "related-to": [
        "recipient",
        "data-subject"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "data-subject-request",
              "operands": []
            }
          ]
        }
      ]
    }
  ],
  "updates": true
}