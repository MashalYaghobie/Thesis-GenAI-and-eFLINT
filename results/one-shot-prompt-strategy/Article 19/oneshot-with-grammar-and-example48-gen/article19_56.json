{
  "version": "0.1.0",
  "kind": "phrases",
  "phrases": [
    {
      "kind": "afact",
      "name": "controller",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "data-subject",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "recipient",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "personal-data",
      "type": "String"
    },
    {
      "kind": "cfact",
      "name": "rectification-notification",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "cfact",
      "name": "erasure-notification",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "cfact",
      "name": "restriction-notification",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients-about-rectification",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "rectification-notification",
              "operands": []
            },
            {
              "operator": "NOT",
              "operands": [
                {
                  "identifier": "impossible-or-disproportionate-effort",
                  "operands": []
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients-about-erasure",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "erasure-notification",
              "operands": []
            },
            {
              "operator": "NOT",
              "operands": [
                {
                  "identifier": "impossible-or-disproportionate-effort",
                  "operands": []
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients-about-restriction",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "restriction-notification",
              "operands": []
            },
            {
              "operator": "NOT",
              "operands": [
                {
                  "identifier": "impossible-or-disproportionate-effort",
                  "operands": []
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "kind": "act",
      "name": "inform-data-subject-about-recipients",
      "actor": "controller",
      "related-to": [
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "data-subject-requests",
              "operands": []
            }
          ]
        }
      ]
    }
  ],
  "updates": true
}