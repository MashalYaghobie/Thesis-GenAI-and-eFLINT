{
  "version": "0.1.0",
  "kind": "phrases",
  "phrases": [
    {
      "kind": "afact",
      "name": "controller",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "personal-data",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "recipient",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "data-subject",
      "type": "String"
    },
    {
      "kind": "aconditional-fact",
      "name": "rectification",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "aconditional-fact",
      "name": "erasure",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "aconditional-fact",
      "name": "restriction-of-processing",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "cfact",
      "name": "disclosure-to-recipient",
      "identified-by": [
        "controller",
        "recipient",
        "personal-data"
      ]
    },
    {
      "kind": "act",
      "name": "communicate-rectification-or-erasure",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "rectification",
              "operands": []
            },
            {
              "identifier": "disclosure-to-recipient",
              "operands": []
            }
          ]
        }
      ],
      "creates": [
        {
          "identifier": "notification-duty-to-recipient",
          "operands": []
        }
      ]
    },
    {
      "kind": "act",
      "name": "communicate-restriction-of-processing",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "restriction-of-processing",
              "operands": []
            },
            {
              "identifier": "disclosure-to-recipient",
              "operands": []
            }
          ]
        }
      ],
      "creates": [
        {
          "identifier": "notification-duty-to-recipient",
          "operands": []
        }
      ]
    },
    {
      "kind": "act",
      "name": "inform-data-subject-about-recipients",
      "actor": "controller",
      "related-to": [
        "data-subject"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "disclosure-to-recipient",
              "operands": []
            },
            {
              "identifier": "request-from-data-subject",
              "operands": []
            }
          ]
        }
      ],
      "creates": [
        {
          "identifier": "notification-duty-to-data-subject",
          "operands": []
        }
      ]
    }
  ],
  "updates": true
}