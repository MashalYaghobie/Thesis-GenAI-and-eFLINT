{
  "version": "0.1.0",
  "kind": "phrases",
  "phrases": [
    {
      "kind": "afact",
      "name": "controller",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "recipient",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "data-subject",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "personal-data",
      "type": "String"
    },
    {
      "kind": "afact",
      "name": "rectification",
      "type": "Boolean"
    },
    {
      "kind": "afact",
      "name": "erasure",
      "type": "Boolean"
    },
    {
      "kind": "afact",
      "name": "restriction-of-processing",
      "type": "Boolean"
    },
    {
      "kind": "cfact",
      "name": "rectification-or-erasure-or-restriction",
      "identified-by": [
        "controller",
        "personal-data"
      ]
    },
    {
      "kind": "cfact",
      "name": "has-disclosed-to-recipients",
      "identified-by": [
        "controller",
        "recipient",
        "personal-data"
      ]
    },
    {
      "kind": "act",
      "name": "notify-recipients",
      "actor": "controller",
      "related-to": [
        "personal-data",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "OR",
          "operands": [
            {
              "identifier": "rectification-or-erasure-or-restriction",
              "operands": []
            },
            {
              "operator": "NOT",
              "operands": [
                {
                  "identifier": "has-disclosed-to-recipients",
                  "operands": []
                }
              ]
            }
          ]
        },
        {
          "operator": "NOT",
          "operands": [
            {
              "identifier": "rectification-or-erasure-or-restriction",
              "operands": []
            }
          ]
        }
      ],
      "creates": [
        {
          "identifier": "notification-duty",
          "operands": []
        }
      ]
    },
    {
      "kind": "act",
      "name": "inform-data-subject",
      "actor": "controller",
      "related-to": [
        "data-subject",
        "recipient"
      ],
      "holds-when": [
        {
          "operator": "AND",
          "operands": [
            {
              "identifier": "has-disclosed-to-recipients",
              "operands": []
            },
            {
              "identifier": "data-subject",
              "operands": []
            }
          ]
        }
      ],
      "creates": [
        {
          "identifier": "informing-duty",
          "operands": []
        }
      ]
    },
    {
      "kind": "duty",
      "name": "notification-duty",
      "holder": "controller",
      "claimant": "recipient",
      "related-to": [
        "personal-data"
      ]
    },
    {
      "kind": "duty",
      "name": "informing-duty",
      "holder": "controller",
      "claimant": "data-subject",
      "related-to": [
        "recipient"
      ]
    }
  ],
  "updates": true
}